{
  "name": "solana-saga",
  "version": "2.0.0",
  "description": "The ultimate prediction market on Solana - Swipe to Predict, powered by Jupiter",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build --webpack",
    "start": "next start",
    "lint": "next lint",
    "build:static": "BUILD_TARGET=capacitor next build --webpack",
    "cap:init": "npx cap init 'Solana Saga' fun.solanasaga.app --web-dir=out",
    "cap:add:android": "npx cap add android",
    "cap:sync": "npx cap sync",
    "cap:copy": "npx cap copy",
    "cap:open:android": "npx cap open android",
    "android:build": "npm run build:static && npm run cap:sync",
    "android:apk": "npm run android:build && cd android && ./gradlew assembleDebug && cd ..",
    "android:apk:release": "npm run android:build && cd android && ./gradlew assembleRelease && cd .."
  },
  "dependencies": {
    "@capacitor/android": "^6.0.0",
    "@capacitor/core": "^6.0.0",
    "@coral-xyz/anchor": "^0.32.1",
    "@jup-ag/jup-mobile-adapter": "^0.0.2",
    "@jup-ag/wallet-adapter": "^0.2.0",
    "@solana/spl-token": "^0.4.14",
    "@solana/wallet-adapter-base": "^0.9.23",
    "@solana/wallet-adapter-react": "^0.15.35",
    "@solana/wallet-adapter-react-ui": "^0.9.35",
    "@solana/wallet-adapter-wallets": "^0.19.32",
    "@solana/web3.js": "^1.95.3",
    "canvas-confetti": "^1.9.4",
    "framer-motion": "^11.11.17",
    "howler": "^2.2.4",
    "lucide-react": "^0.454.0",
    "next": "^16.0.10",
    "next-pwa": "^5.6.0",
    "qrcode.react": "^4.2.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "use-sound": "^5.0.0"
  },
  "devDependencies": {
    "@capacitor/cli": "^6.0.0",
    "@types/canvas-confetti": "^1.9.0",
    "@types/howler": "^2.2.12",
    "@types/node": "^22.9.0",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "autoprefixer": "^10.4.20",
    "eslint": "^8.57.0",
    "eslint-config-next": "15.0.3",
    "postcss": "^8.4.49",
    "tailwindcss": "^3.4.15",
    "typescript": "^5.6.3"
  }
}
